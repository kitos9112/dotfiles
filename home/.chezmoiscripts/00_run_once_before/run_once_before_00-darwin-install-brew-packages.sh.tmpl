    brew "awscli"
    brew "cargo-instruments"
    brew "chezmoi"
    brew "direnv"
    brew "docker-credential-helper-ecr"
    brew "figlet"
    brew "fzf"
    brew "gh"
    brew "git"
    brew "git-crypt"
    brew "gnupg"
    brew "go"
    brew "gomplate"
    brew "goreleaser"
    brew "grep"
    brew "helm"
