    tap "gabrie30/utils"
    tap "go-task/tap"
    tap "homebrew/bundle"
    tap "homebrew/cask"
    tap "homebrew/core"
    tap "instrumenta/instrumenta"
    brew "direnv"
    brew "readline"
    brew "go"
